#parse("/layout.vm")
#@layout("GitHub profile summary")
<div class="search-screen">
    <h1>Enter GitHub username</h1>
    <form>
        <input type="text" name="q" placeholder="ex. 'tipsy'">
    </form>
    #if($q != "")
        <h4>Couldn't find user <span class="search-term">$q</span></h4>
    #end
</div>
<script>
    document.querySelector("input").focus();
</script>
#end
